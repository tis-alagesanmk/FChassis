<ResourceDictionary xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:FChassis.UI.Controls">

  <!--
    Additional resources 
    Using Control Themes:
         https://docs.avaloniaui.net/docs/basics/user-interface/styling/control-themes
    Using Theme Variants:
         https://docs.avaloniaui.net/docs/guides/styles-and-resources/how-to-use-theme-variants
  -->
  
  <Design.PreviewWith>
    <StackPanel Width="400" Height="700" Spacing="10">      
        <Grid RowDefinitions="* * * *" ColumnDefinitions="* * * *">
			<controls:TextboxLabel Row1="2" Column="0"/>
        </Grid>
    </StackPanel>
  </Design.PreviewWith>
 
  <ControlTheme x:Key="{x:Type controls:TextboxLabel}" TargetType="controls:TextboxLabel">
	  <Setter Property="Foreground" Value="Red"/>
    <Setter Property="Template">
      <ControlTemplate>
		  <StackPanel Orientation="Horizontal">
			  <Label   Content="{TemplateBinding Content}" HorizontalAlignment="Right"/>
			  <TextBox  Text="{TemplateBinding Text}"/>
		  </StackPanel>
      </ControlTemplate>
    </Setter>
  </ControlTheme>
</ResourceDictionary>
